{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: cl.exe build active file",
			"command": "cl.exe",
			"args": [
				"/Zi",
				"/EHsc",
				"/nologo",
				"/Fo${workspaceFolder}\\out\\",
				"/Fd${workspaceFolder}\\out\\",
				"/Fe${workspaceFolder}\\out\\advent-of-code.exe",
				"*.cpp",
				"${workspaceFolder}\\solutions\\*.cpp",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: cl.exe"
		}
	]
}